<h1>List of Actors</h1>

<!-- ✅ Actor Creation Form -->
<form action="/insert_actor" method="post">
  <label for="query_name">Name</label>
  <input type="text" id="query_name" name="query_name" required>

  <button type="submit">Create actor</button>
</form>

<ul>
  <% @actors.each do |actor| %>
    <li>
      <a href="/actors/<%= actor.id %>"><%= actor.name %></a>
      <a href="/actors/<%= actor.id %>">Show details</a>
      <a href="/delete_actor/<%= actor.id %>">❌ Delete</a>
    </li>
  <% end %>
</ul>
