<h1>Actor Details</h1>

<p><strong>Name:</strong> <%= @actor.name %></p>
<p><strong>Date of Birth:</strong> <%= @actor.dob&.strftime("%Y-%m-%d") || "Unknown" %></p>

<% if @actor.image.present? %>
  <img src="<%= @actor.image %>" width="200">
<% end %>

<h2>Characters Played</h2>
<ul>
  <% @actor.characters.each do |character| %>
    <li><%= character.name %> in <a href="/movies/<%= character.movie_id %>"><%= character.movie.title %></a></li>
  <% end %>
</ul>

<h2>Worked with Directors</h2>
<ul>
  <% @actor.movies.each do |movie| %>
    <li><%= movie.director.name if movie.director.present? %></li>
  <% end %>
</ul>

<h2>Update Actor</h2>
<form action="/update_actor/<%= @actor.id %>" method="post">
  <label for="query_image">Image</label>
  <input type="text" id="query_image" name="query_image" value="<%= @actor.image %>">

  <button type="submit">Update actor</button>
</form>
