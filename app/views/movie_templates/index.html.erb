<h1>List of Movies</h1>

<!-- âœ… Movie Creation Form -->
<form action="/insert_movie" method="post">
  <label for="query_title">Title</label>
  <input type="text" id="query_title" name="query_title" required>

  <label for="query_year">Year</label>
  <input type="number" id="query_year" name="query_year" required>

  <label for="query_duration">Duration</label>
  <input type="number" id="query_duration" name="query_duration" required>

  <label for="query_description">Description</label>
  <input type="text" id="query_description" name="query_description">

  <label for="query_image">Image URL</label>
  <input type="text" id="query_image" name="query_image">

  <label for="query_director_id">Director ID</label>
  <input type="number" id="query_director_id" name="query_director_id" required>

  <button type="submit">Create movie</button>
</form>

<h2>Movies List</h2>
<ul>
  <% @movies.each do |movie| %>
    <li>
      <strong><%= movie.title %></strong> (Directed by <%= movie.director&.name || "Unknown" %>)
      <a href="/movies/<%= movie.id %>">Show details</a>
    </li>
  <% end %>
</ul>
