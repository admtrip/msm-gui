<h1><%= @movie.title %></h1>

<p><strong>Directed by:</strong> 
  <% if @movie.director.present? %>
    <%= @movie.director.name %>
  <% else %>
    Unknown Director
  <% end %>
</p>

<p><strong>Description:</strong> <%= @movie.description.presence || "No description available." %></p>
<p><strong>Year:</strong> <%= @movie.year %></p>
<p><strong>Duration:</strong> <%= @movie.duration %> minutes</p>

<% if @movie.image.present? %>
  <img src="<%= @movie.image %>" width="200">
<% end %>

<h2>Update Movie</h2>
<form action="/update_movie/<%= @movie.id %>" method="post">
  <label for="query_image">Image</label>
  <input type="text" id="query_image" name="query_image" value="<%= @movie.image %>">

  <button type="submit">Update movie</button>
</form>

<a href="/movies">Back to Movies</a>
