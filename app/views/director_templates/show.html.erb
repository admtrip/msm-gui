<h1>Director Details</h1>

<p><strong>Name:</strong> <%= @director.name %></p>
<p><strong>Date of Birth:</strong> <%= @director.dob&.strftime("%Y-%m-%d") || "Unknown" %></p>
<p><strong>Bio:</strong> <%= @director.bio.presence || "No biography available." %></p>

<% if @director.image.present? %>
  <img src="<%= @director.image %>" width="200">
<% end %>

<h2>Filmography</h2>
<ul>
  <% @movies_by_director.each do |movie| %>
    <li>
      <a href="/movies/<%= movie.id %>"><%= movie.title %></a> (Released in <%= movie.year %>)
      <a href="/movies/<%= movie.id %>">Show details</a>
    </li>
  <% end %>
</ul>

<h2>Update Director</h2>
<form action="/update_director/<%= @director.id %>" method="post">
  <label for="query_image">Image</label>
  <input type="text" id="query_image" name="query_image" value="<%= @director.image %>">

  <button type="submit">Update director</button>
</form>

<a href="/directors">Back to Directors</a>
