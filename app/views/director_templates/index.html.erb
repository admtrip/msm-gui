<h1>List of Directors</h1>

<form action="/insert_director" method="post">
  <label for="query_name">Name</label>
  <input type="text" id="query_name" name="query_name" required>

  <button type="submit">Create director</button>
</form>

<h2>Directors</h2>
<ul>
  <% @directors.each do |director| %>
    <li>
      <strong><%= director.name %></strong> 
      (Born: <%= director.dob&.strftime("%Y-%m-%d") || "Unknown" %>)
      <a href="/directors/<%= director.id %>">Show details</a>
    </li>
  <% end %>
</ul>

